<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding">

    <TextView
        style="@android:style/TextAppearance"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_message" />

    <TextView
        style="@android:style/TextAppearance"
        android:id="@+id/label_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginTop="@dimen/version_margin"
        android:text="@string/version" />

    <TextView
        style="@android:style/TextAppearance"
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/label_version"
        android:layout_toRightOf="@id/label_version"
        android:layout_marginLeft="@dimen/version_margin"/>
</RelativeLayout>